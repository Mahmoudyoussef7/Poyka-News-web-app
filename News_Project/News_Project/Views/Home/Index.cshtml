@model List<Category>
@{
    ViewData["Title"] = "Home";
}

<section id="featured-services" class="featured-services">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-6 col-lg-3 d-flex align-items-stretch mb-5 my-2 mb-lg-0">
                <a asp-action="NewsByCategory" asp-controller="Home" asp-route-id="@item.ID">
                    <div class="icon-box aos-init aos-animate" style="width:100%;text-align:center" data-aos="fade-up" data-aos-delay="100">
                        <div class="icon"><i class="fas fa-newspaper"></i></div>
                        <a href="Home/NewsByCategory/@item.ID"><h4>@item.Name</h4></a>
                        <p class="description">@item.Description</p>
                    </div>
                </a>

            </div>
            }          
        </div>
    </div>
</section>

